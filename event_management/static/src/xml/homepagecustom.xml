<section class="innnerpage" id="deals_cat_sec">
	<div class="container-fluid deals_cat_inn">
		<div class="container">
			<div class="row">
				<h3 class="d-block w-100 text-center">Choose a Category to View Local Savings</h3>
				{% if area.id == 4 %}
					{% set deals_cats = entries('couponcodes','categories').whereNotIn('id',[3,2,4,10]).orderBy('sort_order','asc').get() %}
				{% else %}
					{% set deals_cats = entries('couponcodes','categories').whereNotIn('id',[7,9,10]).orderBy('sort_order','asc').get() %}
				{% endif %}
				{% for deals_cat in deals_cats %}
				<div class="deals_each_cat col-lg-6 col-xl-4">
					<div class="cat_img_txt_link">
						<div class="cat_img_wrap_js">
							<a href="/{{ deals_cat.categoryName |replace({'&': 'and', ' ': '-'}) }}"><img class="img-fluid" src="/files/{{ deals_cat.categoryImage.path }}" alt="{{ deals_cat.name }}" /></a>
						</div>
						<div class="cat_deal_details">
							<h5>{{ deals_cat.categoryName }}</h5>
							{% if deals_cat.description !='' %}
								<p>{{ deals_cat.description }}</p>
							{% endif %}
							<a href="/{{ deals_cat.categoryName |replace({'&': 'and', ' ': '-'}) }}">See Offers</a>
						</div>
					</div>
				</div>
				{% endfor %}
				
			</div>
		</div>
	</div>
</section>




<!-- ABOUT -->
<section id="deals_about">
	<div class="container-fluid">
		<div class="container">
			<div class="row">
				<div class="col-lg-5 col-md-12 col-12 order-lg-1 order-2">
					<div class="deals_abt_img ">
						<img src="/files/{{ page.about_us_image_home.path }}" alt="" class="img-fluid">
					</div>
				</div>
				<div class="col-lg-7 col-md-12 col-12 order-lg-2 order-1">
					<h3 class="yb_title_new title_exec">About <span>Deals Around Town</span></h3>
					<div class="about_txt">
					{{ page.homepage_about_us | raw }}
					</div>
					<a href="#" data-toggle="modal" data-target="#aboutModal" class="btn design_it hvr-shutter-out-vertical orange">Learn More</a>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- ABOUT END-->

<!-- Coupon -->
<section id="deals_about" class="deals_dowload">
	<div id="download_app"></div>
	<div class="container-fluid">
		<div class="container">
			<div class="row">
				<div class="col-lg-7 col-md-12 col-12">
					<h3 class="yb_title_new title_exec">Never Forget <span>A Coupon Again!</span></h3>
					{{ page.deals_app_content.render | raw }}
					<div class="deals_applink">
						<span>
							<a target="_blank" href="{{ page.app_store_link }}">
								<img alt="Get it on Google Play" src="/files/images/appstore.png" class="img-fluid">
							</a>
						</span>
						<span>
							<a target="_blank" href="{{ page.google_play_link }}">
								<img alt="Get it on Google Play" src="/files/images/gplay.png" class="img-fluid">
							</a>
						</span>
					</div>
				</div>
				<div class="col-lg-5 col-md-12 col-12 download_image">
					<!-- <img src="/files/images/iphone.png" alt="" class="img-fluid"> -->
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Coupon END-->

