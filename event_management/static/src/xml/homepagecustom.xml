<style>
.slick-slide .yoderbilt_greenhouse_slide img.img-fluid {
    width: 100%;
}
section#yoderbilt_greenhouse_slider .yoderbilt_greenhouse_slider_wrap ul.slick-dots {
    bottom: 15px;
}
section#yoderbilt_greenhouse_slider .yoderbilt_greenhouse_slider_wrap ul.slick-dots li button:before {
    color: lime;
    opacity: 1;
    font-size: 10px;
    line-height: 1.9;
    border: 2px solid #000;
    border-radius: 50%;
}
section#yoderbilt_greenhouse_slider .yoderbilt_greenhouse_slider_wrap ul.slick-dots li.slick-active button:before {
    color: orange;
    opacity: 1;
}
.only_mob_screen {
    display: none;
}
	#aboutModal .modal-dialog p {
		font-size: 18px;
    font-weight: 500;
    margin-bottom: 5px;
	}

@media (min-width:993px){
	/* section#yoderbilt_greenhouse_slider .yoderbilt_greenhouse_slider_wrap ul.slick-dots {display:none !important;} */
}
@media (max-width:992px){
	section#yoderbilt_greenhouse_slider .hero_slider .sl_arrows {display: none !important;}
}
@media (max-width:575px){
.only_mob_screen {display: block;}		
#aboutModal .modal-dialog button.close {
		width: auto;
		height: auto;
		top: 2px;
		right: 15px;
	}
	.deals_home_slide {
		height: auto !important;
    	background: transparent !important;
		display: block !important;
	}
	.slick-slide img {
    	display: block !important;
	}
	.deal_home_slider .slide_content {
		position: relative !important;
		top: auto !important;
		background: #303030 !important;
	}
	.sldr_fea_sec a {
		margin-bottom: 35px !important;
	}
	.sldr_fea_sec {
		max-width: 100% !important;
		width: 100% !important;
	}
	
}
.yoderbilt_greenhouse_slide:after {
    content: '\A';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.4);
}
.slick_cap {
    z-index: 999;
}
.slider_est:after {
    content: '';
    display: block;
    width: 160px;
    height: 1px;
    background-color: #fff;
    margin: 20px auto;
}
.slidercap_btn {
    color: #fff;
    padding: 10px 20px;
    border: 1px solid #fff;
	margin: 20px auto;
}
.slidercap_btn:hover, .slidercap_btn:active, .slidercap_btn:focus {
    background-color: #f26522;
    border: 1px solid #f26522;
    color: #fff;
}
</style>
